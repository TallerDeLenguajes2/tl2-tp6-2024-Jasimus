@{
    ViewData["Title"] = "CrearCliente";
}
@using tp6_tallerII.Models
@model Cliente_space.Cliente

@if(ViewBag.error != null && ViewBag.error!= "")
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.error
    </div>
}

<form asp-controller="Clientes" asp-action="CrearCliente" method="post" class="p-5">
    <input type="hidden" value="0" asp-for="ClienteId">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" name="Nombre" class="form-control">
    </div>
    <div class="mt-3 form-group">
        <label for="Email">Email</label>
        <input type="email" asp-for="Email" name="Email" class="form-control">
    </div>
    <div class="mt-3 form-group">
        <label for="Telefono">Telefono</label>
        <input type="text" asp-for="Telefono" name="Telefono" class="form-control">
    </div>
    <div class="text-center">
        <input type="submit" value="Crear" class="mt-3 btn btn-success">
    </div>
</form>