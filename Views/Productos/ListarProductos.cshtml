@{
    ViewData["Title"] = "ListarProductos";
}

@model List<Producto_space.Producto>
<h1>Lista de Productos</h1>

<table class="table table-bordered">
<tr>
    <th scope="col">Descripci√≥n</th>
    <th scope="col">Precio</th>
    <th scope="col"></th>
</tr>

@foreach (var p in Model)
{
    <tr>
        <td>@p.Descripcion</td>
        <td>@p.Precio</td>
        <td class="text-center">
            <a asp-action="ModificarProducto" asp-route-id="@p.IdProducto" class="btn btn-warning">Modificar</a>
            <a asp-action="EliminarProducto" asp-route-id="@p.IdProducto" class="btn btn-danger">Eliminar</a>
        </td>
    </tr>
}
</table>

<a asp-action="CrearProducto" class="mt-3 btn btn-primary">Crear</a>