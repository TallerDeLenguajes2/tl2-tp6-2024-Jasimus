@{
    ViewData["Title"] = "Modificar Producto";
}

@using tp6_tallerII.Models

<form asp-controller="Productos" asp-action="ModificarProducto" method="post">
    <div class="form-group">
        <label for="Descripcion">Descripcion</label>
        <input type="text" asp-for="Descripcion" name="Descripcion" class="form-control">
    </div>
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="number" asp-for="Precio" name="Precio" class="form-control">
    </div>
    <input type="submit" title="Modificar" class="btn btn-success">
</form>